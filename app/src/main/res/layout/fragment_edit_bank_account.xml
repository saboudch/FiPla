<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout_add_bankaaccount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_background"
    android:orientation="vertical"
    tools:context=".EditBankAccountFragment">

    <ScrollView
        android:background="@drawable/add_account_input_background"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editBankAccountTextViewHeader"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"/>


            <EditText
                android:id="@+id/editTextAccountNameEdit"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:background="@drawable/textfield_background"
                android:layout_marginTop="0dp"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:hint="Name für das Konto / die Aktie"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/editTextBalanceEdit"
                android:background="@drawable/textfield_background"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"
                android:hint="Guthaben"
                android:textColor="@color/white" />

            <EditText
                android:background="@drawable/textfield_background"
                android:id="@+id/editTextAccountCurrencyEdit"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:hint="Währung"
                android:textColor="@color/white" />
            <EditText
                android:background="@drawable/textfield_background"
                android:id="@+id/editTextExchangeOrBankNameEdit"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:hint="Name der Bank"
                android:textColor="@color/white"/>


            <EditText
                android:background="@drawable/textfield_background"
                android:id="@+id/editTextBankIBANEdit"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:hint="IBAN"
                android:textColor="@color/white" />

            <EditText
                android:background="@drawable/textfield_background"
                android:id="@+id/editTextBankBICEdit"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:hint="BIC"
                android:textColor="@color/white" />
            <TextView
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/editBankAccountWarning"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#D50000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/deleteBankAccountYesButton"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="50dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/add_button_background"
                    android:text="Ja"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/deleteBankAccountNoButton"
                    android:layout_marginLeft="90dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/add_button_background"
                    android:text="Nein"
                    android:textColor="@color/white"/>


            </LinearLayout>
            <Button
                android:background="@drawable/add_button_background"
                android:id="@+id/buttonSaveEditsBankAccount"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="50dp"
                android:text="Speichern"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/deleteBankAccountButton"
                android:background="@drawable/ic_delete_icon"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="30dp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </ScrollView>
</FrameLayout>

